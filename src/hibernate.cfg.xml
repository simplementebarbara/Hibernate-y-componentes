<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "classpath://org/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/mydb_ferreteria</property>
        <property name="connection.username">root</property>
        <property name="connection.password">mysql2022</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">false</property>
        
        <!-- mapping resource="accesodatos/pruebaHibernate/customer.hbm.xml"/-->
        <!-- mapping class="accesodatos.pruebahibernate.Customer"/-->
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <!--Aqui van todas las clases-->
        <mapping class="DataSource.Clientes" />
         <mapping class="DataSource.Proveedores" />
         <mapping class="DataSource.Categorias" />
         <mapping class="DataSource.Productos"/>
         <mapping class="DataSource.Facturas"/>
         <mapping class="DataSource.LineasFacturas"/>
        
    </session-factory>
</hibernate-configuration>

